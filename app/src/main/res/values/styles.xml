<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextViewAdvTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="chipSurfaceColor">@color/background</item>
        <item name="android:textAppearance">@style/chipTextAppearance</item>
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="TextViewAdvDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="chipSurfaceColor">@color/teal_700</item>
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="chipTextAppearance">
        <item name="android:textSize">25sp</item>
    </style>


